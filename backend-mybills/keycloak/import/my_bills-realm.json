{
  "realm": "mybills",
  "enabled": true,

  "clients": [
    {
      "clientId": "api-service",
      "name": "Billing API Service Client",
      "protocol": "openid-connect",
      "enabled": true,

      "publicClient": false,
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,

      "secret": "${KC_API_CLIENT_SECRET}",

      "redirectUris": [
        "*"
      ],
      "webOrigins": [
        "*"
      ]
    }
  ],

  "roles": {
    "realm": [
      {
        "name": "billing_read",
        "description": "Allows fetching billing data"
      }
    ]
  }
}
